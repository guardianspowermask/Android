<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/custom_background_white"
            app:layout_constraintDimensionRatio="H,328:507">
            <TextView
                android:id="@+id/tv_store_dialog_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="-7sp"
                android:fontFamily="@font/notosanskrlight"
                android:includeFontPadding="false"
                android:layout_marginTop="23.2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="CU 피드백"/>
        <TextView
            android:id="@+id/tv_date_dialog_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#626262"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="-10sp"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_store_dialog_feedback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2019.08.09"/>
        <View
            android:id="@+id/view_line_dialog_feedback"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#707070"
            app:layout_constraintTop_toBottomOf="@id/tv_date_dialog_feedback"
            android:layout_marginTop="18.4dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,328:422"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/view_line_dialog_feedback">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_img_dialog_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>