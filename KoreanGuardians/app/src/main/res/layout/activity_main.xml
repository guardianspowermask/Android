<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".ui.main.MainActivity">
    <TextView
        android:id="@+id/tv_top_main"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:textSize="24sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04sp"
        android:lineSpacingExtra="-8sp"
        android:fontFamily="@font/notosanscjkkrlight"
        android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:text="키워드를\n선택하세요"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_blank_main"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#f4f4f4"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_main"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_category_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_blank_main"/>
    <View
        android:layout_width="0.3dp"
        android:layout_height="wrap_content"
        android:background="#707070"
        app:layout_constraintTop_toTopOf="@+id/rv_category_main"
        app:layout_constraintBottom_toBottomOf="@+id/rv_category_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="118dp"
        android:layout_height="39dp"
        android:background="@drawable/custom_btn_blue"
        android:text="제보하기"
        android:textSize="16sp"
        android:letterSpacing="-0.04"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="18dp"/>
</android.support.constraint.ConstraintLayout>