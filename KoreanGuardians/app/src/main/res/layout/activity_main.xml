<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_top_main"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:textSize="24sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="-8sp"
        android:fontFamily="@font/notosanscjkkrlight"
        android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:text="키워드를\n선택하세요"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_blank_main"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#f4f4f4"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_main"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_category_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_blank_main"/>
</android.support.constraint.ConstraintLayout>