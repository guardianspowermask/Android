<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity">
    <ImageView
        android:id="@+id/iv_img_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,360:242.6"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,360:242.6"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_foreground_black"/>
    <TextView
        android:id="@+id/tv_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="-7sp"
        android:fontFamily="@font/notosanskrlight"
        android:includeFontPadding="false"
        android:layout_marginTop="91.2dp"
        app:layout_constraintTop_toTopOf="@id/iv_img_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="띵작 모찌롤"/>
    <TextView
        android:id="@+id/tv_store_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="10sp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:layout_marginTop="11.9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="제조사 / CU"/>
    <Button
        android:id="@+id/btn_feedback_detail"
        android:layout_width="102.3dp"
        android:layout_height="33.5dp"
        android:background="@drawable/custom_btn_blue"
        android:clickable="true"
        android:includeFontPadding="false"
        android:text="피드백 보기"
        android:textSize="16sp"
        android:letterSpacing="-0.04"
        android:fontFamily="@font/notosanskrmedium"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="13.4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_store_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_report_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="11sp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:layout_marginTop="11.9dp"
        app:layout_constraintTop_toBottomOf="@id/iv_img_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginTop="20.4dp"
        android:layout_marginStart="16dp"
        android:text="항의"/>
    <TextView
        android:id="@+id/tv_cnt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="11sp"
        android:fontFamily="@font/notosanskrbold"
        android:includeFontPadding="false"
        android:layout_marginTop="11.9dp"
        app:layout_constraintTop_toBottomOf="@id/iv_img_detail"
        app:layout_constraintStart_toEndOf="@id/tv_report_detail"
        app:layout_goneMarginTop="20.4dp"
        android:layout_marginStart="3dp"
        tools:text="1912"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_report_detail"
        app:layout_constraintBottom_toTopOf="@id/const_comment_detail"
        android:layout_marginTop="34dp"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/const_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/et_comment_detail"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:isScrollContainer="true"
            android:minHeight="38dp"
            android:maxHeight="84dp"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrregular"
            android:textColor="#000"
            android:hint="항의합니다."
            android:textColorHint="#989898"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_background_gray"/>
        <TextView
            android:id="@+id/tv_btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="10sp"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/et_comment_detail"
            app:layout_constraintBottom_toBottomOf="@id/et_comment_detail"
            app:layout_constraintEnd_toEndOf="@id/et_comment_detail"
            android:background="?attr/selectableItemBackground"
            android:text="항의"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#707070"
        app:layout_constraintBottom_toTopOf="@id/const_comment_detail"/>
</android.support.constraint.ConstraintLayout>