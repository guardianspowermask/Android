<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="328dp"
        android:layout_height="185dp" xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="11dp"
        app:layout_constraintDimensionRatio="328:185">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="11dp" >
        <ImageView
            android:id="@+id/iv_img_item_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/custom_foreground_black"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_name_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="-7sp"
        android:fontFamily="@font/notosanscjkkrlight"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        tools:text="띵작 모찌롤"/>
    <TextView
        android:id="@+id/tv_store_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="-7sp"
        android:fontFamily="@font/notosanscjkkrlight"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_item_item"
        tools:text="CU"/>
    <TextView
        android:id="@+id/tv_all_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="8sp"
        android:gravity="end"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        android:text="모든 항의"/>
    <TextView
        android:id="@+id/tv_gun_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="8sp"
        android:gravity="end"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_all_item_item"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        android:text="건"/>
    <TextView
        android:id="@+id/tv_cnt_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="8sp"
        android:gravity="end"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_all_item_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_gun_item_item"
        tools:text="118"/>
    <ImageView
        android:id="@+id/iv_btn_item_item"
        android:layout_width="89dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_btn_white"
        android:clickable="true"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:letterSpacing="-0.04"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@+id/iv_btn_item_item"
        app:layout_constraintBottom_toBottomOf="@id/iv_btn_item_item"
        app:layout_constraintStart_toStartOf="@id/iv_btn_item_item"
        app:layout_constraintEnd_toEndOf="@id/iv_btn_item_item"
        android:text="항의하기"/>
</android.support.constraint.ConstraintLayout>