<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="168dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_icon_item_category"
        android:layout_width="match_parent" 
        android:layout_height="47dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"/>
    <TextView
        android:id="@+id/tv_name_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04sp"
        android:fontFamily="@font/notosanscjkkrmedium"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_item_category"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="모찌"/>
    <TextView
        android:id="@+id/tv_cnt_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#8d8d8d"
        android:fontFamily="@font/notosanscjkkrmedium"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_item_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="(173)"/>
    <TextView
        android:id="@+id/tv_hashtag_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:letterSpacing="-0.04"
        android:fontFamily="@font/notosanscjkkrregular"
        app:layout_constraintTop_toBottomOf="@id/tv_cnt_item_category"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="#찹쌀떡 #찰떡"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#707070"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>